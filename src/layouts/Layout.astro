          <!-- <a class="f6 pb1 mh2 no-underline {% if page.url contains '/music/' %}current{% endif %}" href="/music">Music</a> -->
        </nav>
      </div>
    </header>

    <main class="w-100 center">
      <slot />
    </main>

    <footer class="f6 mt6 w-100 center pa2">
      <div class="flex items-center justify-between">
        <div class="">
