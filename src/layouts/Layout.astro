          <a href="/" class="header-bug">
            <img class="w3 pa1" src="/images/iheartjy-glitch.png" />
          </a>
        </div>

        <nav class="">
          <a
            class:list={[
              "f6 pb1 mh2 no-underline",
              Astro.url.pathname.includes("/photos") ? "current" : "",
            ]}
            href="/photos">Photos</a
          >
          <a
            class:list={[
              "f6 pb1 mh2 no-underline",
              Astro.url.pathname.includes("/projects") ? "current" : "",
            ]}
            href="/projects">Projects</a
          >
